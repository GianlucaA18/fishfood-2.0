// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Productos {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String
  precio      Float
  imagen      String
  destacado   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Novedades {
  id          Int      @id @default(autoincrement())
  titulo      String
  info        String
  imagen      String
  fecha       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Usuarios {
  id        Int @id @default(autoincrement())
  correo    String @unique
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Banner {
  id       Int    @id @default(autoincrement())
  imgLink  String
}

model Redes {
  id        Int    @id @default(autoincrement())
  linkRedes String
}

model Mision {
  id       Int    @id @default(autoincrement())
  descripcion String
  imgLink  String
}

model Beneficios {
  id       Int    @id @default(autoincrement())
  pregunta String
  respuesta String
}

model Testimonios {
  id         Int    @id @default(autoincrement())
  nombre     String
  testimonio String
  imgLink    String
}

model About {
  id          Int    @id @default(autoincrement())
  descripcion String
}

model Secciones {
  id       Int    @id @default(autoincrement())
  descripcion String
  imgLink  String
}